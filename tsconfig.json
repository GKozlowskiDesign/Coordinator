{
  "compilerOptions": {
    /* Layout */
    "rootDir": "src",
    "outDir": "dist",

    /* Runtime / Module system */
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "CommonJS",
    "moduleResolution": "Node",

    /* Interop & perf */
    "esModuleInterop": true,
    "skipLibCheck": true,

    /* Types */
    "types": ["node"],

    /* Maps (optional for dev) */
    "sourceMap": true,
    "declaration": false,
    "declarationMap": false,

    /* Keep it simple for a service */
    "strict": false,
    "isolatedModules": false,
    "verbatimModuleSyntax": false
  }
}
